        //var menuObj = ej.base.getComponent(document.getElementById('topmenu'), 'topmenu');
        topvarmenuresize(window.innerWidth);

    </script>

    <script>
        $(document).on('click', '#Btn_AddSkillSet', function (e) {
            $.ajax({
                url: '/PartialView/LoadViewWithAjax',
                success: function (partialView) {
                    $('body').append(partialView);
                }
            });
        });

        $(document).on('click', '#Btn_DeleteSkillset', function (e) {
            $(this).parent().parent().remove();
        });

    </script>


